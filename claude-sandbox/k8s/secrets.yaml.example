# Claude Sandbox - Secrets Template
#
# Copy this file to secrets.yaml and fill in your values.
# Then apply with: kubectl apply -f secrets.yaml
#
# IMPORTANT: Do not commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: claude-sandbox-secrets
  labels:
    app: claude-sandbox
type: Opaque
stringData:
  # GitHub token for cloning private repos
  # Create at: https://github.com/settings/tokens
  # Required scopes: repo (full control)
  GITHUB_TOKEN: "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # Claude OAuth token (from `claude setup-token`, valid 1 year)
  # Uses your Claude subscription (Max/Pro)
  CLAUDE_CODE_OAUTH_TOKEN: "sk-ant-oat01-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # OR use Anthropic API key (pay-as-you-go, alternative to OAuth)
  # Get from: https://console.anthropic.com/
  # ANTHROPIC_API_KEY: "sk-ant-api01-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # Telegram bot token for notifications
  # Create bot via @BotFather on Telegram
  TELEGRAM_BOT_TOKEN: "123456789:ABCdefGHIjklMNOpqrsTUVwxyz"

  # Telegram chat ID to receive notifications
  # Get by messaging @userinfobot or @get_id_bot
  TELEGRAM_CHAT_ID: "-1001234567890"

  # Repository URL to clone
  REPO_URL: "https://github.com/your-username/your-repo.git"

  # Branch to start from (optional, defaults to main)
  REPO_BRANCH: "main"
